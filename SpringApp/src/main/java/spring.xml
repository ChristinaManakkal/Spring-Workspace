<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

<bean id="lap" class="in.mindcraft.SpringApp.Laptop">
<property name="lid" value="101"></property>      <!--Setter Injection-->
<property name="make" value="Dell"></property>
<property name="cost" value="45000"></property>
</bean>

<bean id="l1" class="in.mindcraft.SpringApp.Laptop">
<constructor-arg value="102" type="int"></constructor-arg>  <!--constructor injection-->
<constructor-arg value="apple" type="String"></constructor-arg>
<constructor-arg value="85000" type="double"></constructor-arg>
</bean>

</beans>